---
// src/pages/index.astro
interface PageMeta {
  title: string;
  description: string;
}

const pageMeta: PageMeta = {
  title: "MVP Geek - Coming Soon",
  description:
    "Ship your MVP in weeks, not months. MVP Geek is launching soon.",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageMeta.title}</title>
    <meta name="description" content={pageMeta.description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={pageMeta.title} />
    <meta property="og:description" content={pageMeta.description} />
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="grain-overlay"></div>

    <!-- Gradient Orbs -->
    <div class="orbs-container">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <div class="container">
      <div class="content-wrapper">
        <!-- Logo -->
        <div class="logo-container">
          <div class="logo-wrapper">
            <div class="logo-glow"></div>
            <img src="./public/MVP Geek Logo Design Transparent.png" alt="MVP Geek Logo" class="logo" />
          </div>
        </div>

        <!-- Main Content -->
        <main>
          <!-- Badge -->
          <div class="badge-container">
            <div class="badge">
              <span class="pulse-dot">
                <span class="pulse-ring"></span>
                <span class="pulse-core"></span>
              </span>
              <span class="badge-text">Coming Soon</span>
            </div>
          </div>

          <!-- Headline -->
          <div class="headline-container">
            <h1 class="headline">
              <span class="headline-normal">Validate Your Idea in</span>
              <br />
              <span class="headline-gradient">Weeks, Not Months</span>
            </h1>

            <p class="subtitle">
              Too many founders waste months just trying to get their MVP off
              the ground. We move faster, build leaner, and deliver a working
              product in under a month so you can start validating, not waiting.
            </p>
          </div>

          <!-- Email Signup -->
          <div class="form-container">
            <form class="signup-form" id="signupForm">
              <div class="input-group">
                <input
                  type="email"
                  placeholder="Enter your email"
                  required
                  id="emailInput"
                  name="email"
                  aria-label="Email address"
                  class="email-input"
                />
                <button type="submit" class="submit-btn">
                  <span class="btn-text">Get Early Access</span>
                </button>
              </div>
              <p class="privacy-text">
                We'll notify you when we launch. No spam, ever.
              </p>
            </form>
          </div>

          <!-- Stats -->
          <div class="stats-container">
            <div class="stats-grid">
              <div class="stat-card">
                <div class="stat-card-inner">
                  <div class="stat-card-glow"></div>
                  <div class="stat-content">
                    <div class="stat-number">2-4</div>
                    <div class="stat-label">Weeks to Launch</div>
                  </div>
                </div>
              </div>

              <div class="stat-card">
                <div class="stat-card-inner">
                  <div class="stat-card-glow"></div>
                  <div class="stat-content">
                    <div class="stat-number">10x</div>
                    <div class="stat-label">More Affordable</div>
                  </div>
                </div>
              </div>

              <div class="stat-card">
                <div class="stat-card-inner">
                  <div class="stat-card-glow"></div>
                  <div class="stat-content">
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Code Ownership</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>

        <!-- Footer -->
        <footer class="footer">
          <p class="footer-copyright">
            &copy; 2025 MVP Geek. All rights reserved.
          </p>
          <div class="footer-links">
            <a
              href="https://twitter.com/mvpgeek"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link"
            >
              Twitter
            </a>
            <a href="mailto:info@mvpgeek.com" class="footer-link"> Contact </a>
          </div>
        </footer>
      </div>
    </div>

    <style>
      /* CSS Reset & Base */
      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --brand-50: #fff5f0;
        --brand-100: #ffe8dc;
        --brand-200: #ffd1b8;
        --brand-300: #ffb08f;
        --brand-400: #ff8f5e;
        --brand-500: #ff6929;
        --brand-600: #e65020;
        --brand-700: #c23d18;
        --brand-800: #9f3215;
        --brand-900: #822b14;

        --slate-50: #f8fafc;
        --slate-100: #f1f5f9;
        --slate-200: #e2e8f0;
        --slate-300: #cbd5e1;
        --slate-400: #94a3b8;
        --slate-500: #64748b;
        --slate-600: #475569;
        --slate-700: #334155;
        --slate-800: #1e293b;
        --slate-900: #0f172a;
        --slate-950: #020617;
      }

      html {
        font-size: 16px;
      }

      body {
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          system-ui,
          sans-serif;
        background: linear-gradient(
          135deg,
          var(--slate-950) 0%,
          var(--slate-900) 100%
        );
        color: white;
        min-height: 100vh;
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        overflow-x: hidden;
      }

      /* Grain Overlay */
      .grain-overlay {
        position: fixed;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        opacity: 0.025;
        pointer-events: none;
        z-index: 1;
      }

      /* Gradient Orbs */
      .orbs-container {
        position: fixed;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 0;
      }

      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.15;
        transition: transform 1s ease-out;
      }

      .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(
          circle,
          var(--brand-500) 0%,
          transparent 70%
        );
        top: -10%;
        right: -10%;
        animation: float-1 20s ease-in-out infinite;
      }

      .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(
          circle,
          var(--brand-400) 0%,
          transparent 70%
        );
        bottom: -10%;
        left: -10%;
        animation: float-2 25s ease-in-out infinite;
      }

      @keyframes float-1 {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(50px, -50px) scale(1.1);
        }
        66% {
          transform: translate(-50px, 50px) scale(0.9);
        }
      }

      @keyframes float-2 {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(-50px, 50px) scale(0.9);
        }
        66% {
          transform: translate(50px, -50px) scale(1.1);
        }
      }

      /* Container */
      .container {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.25rem;
        z-index: 10;
      }

      .content-wrapper {
        max-width: 48rem;
        width: 100%;
      }

      /* Logo */
      .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 3rem;
        opacity: 0;
        animation: fadeInDown 0.8s ease-out 0.1s forwards;
      }

      .logo-wrapper {
        position: relative;
        cursor: pointer;
      }

      .logo-glow {
        position: absolute;
        inset: -0.5rem;
        background: linear-gradient(
          135deg,
          rgba(255, 105, 41, 0.2),
          rgba(255, 143, 94, 0.2)
        );
        border-radius: 1.5rem;
        filter: blur(1.25rem);
        opacity: 0;
        transition: opacity 0.7s ease;
      }

      .logo-wrapper:hover .logo-glow {
        opacity: 1;
      }

      .logo {
        width: 5rem;
        height: 5rem;
        position: relative;
        transition: transform 0.3s ease;
      }

      .logo-wrapper:hover .logo {
        transform: scale(1.05);
      }

      /* Badge */
      .badge-container {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeInScale 0.6s ease-out 0.3s forwards;
      }

      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50px;
        backdrop-filter: blur(10px);
      }

      .pulse-dot {
        position: relative;
        display: flex;
        width: 0.5rem;
        height: 0.5rem;
      }

      .pulse-ring {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--brand-500);
        opacity: 0.75;
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }

      .pulse-core {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--brand-500);
      }

      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
          opacity: 0.75;
        }
        50% {
          transform: scale(1.5);
          opacity: 0;
        }
      }

      .badge-text {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--slate-300);
      }

      /* Headline */
      .headline-container {
        text-align: center;
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeInUp 0.8s ease-out 0.5s forwards;
      }

      .headline {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.1;
        letter-spacing: -0.02em;
        margin-bottom: 1.5rem;
      }

      .headline-normal {
        color: white;
      }

      .headline-gradient {
        display: inline-block;
        margin-top: 0.5rem;
        background: linear-gradient(
          135deg,
          var(--brand-500) 0%,
          var(--brand-400) 50%,
          var(--brand-200) 100%
        );
        background-size: 200% 200%;
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientShift 8s ease infinite;
      }

      @keyframes gradientShift {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      .subtitle {
        font-size: 1.125rem;
        color: var(--slate-400);
        line-height: 1.7;
        font-weight: 300;
        max-width: 37.5rem;
        margin: 0 auto;
      }

      /* Form */
      .form-container {
        padding-top: 1rem;
        opacity: 0;
        animation: fadeInUp 0.8s ease-out 0.7s forwards;
      }

      .signup-form {
        max-width: 28rem;
        margin: 0 auto;
      }

      .input-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
      }

      .email-input {
        flex: 1;
        padding: 1rem 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.75rem;
        color: white;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
      }

      .email-input::placeholder {
        color: var(--slate-500);
      }

      .email-input:focus {
        outline: none;
        border-color: rgba(255, 105, 41, 0.5);
        background: rgba(255, 255, 255, 0.08);
        transform: scale(1.01);
      }

      .email-input:hover {
        background: rgba(255, 255, 255, 0.08);
      }

      .submit-btn {
        padding: 1rem 2rem;
        background: linear-gradient(
          135deg,
          var(--brand-500) 0%,
          var(--brand-400) 100%
        );
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        font-family: inherit;
        cursor: pointer;
        box-shadow: 0 10px 30px rgba(255, 105, 41, 0.25);
        transition: all 0.3s ease;
        white-space: nowrap;
      }

      .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(255, 105, 41, 0.4);
      }

      .submit-btn:active {
        transform: translateY(0);
      }

      .submit-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
      }

      .submit-btn.loading {
        animation: btnPulse 1.5s ease-in-out infinite;
      }

      @keyframes btnPulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.7;
        }
      }

      .privacy-text {
        font-size: 0.875rem;
        color: var(--slate-500);
        text-align: center;
        font-weight: 300;
      }

      /* Stats */
      .stats-container {
        padding-top: 3rem;
        opacity: 0;
        animation: fadeIn 0.8s ease-out 0.9s forwards;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 2rem;
        max-width: 42rem;
        margin: 0 auto;
      }

      .stat-card {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out forwards;
      }

      .stat-card:nth-child(1) {
        animation-delay: 1.1s;
      }
      .stat-card:nth-child(2) {
        animation-delay: 1.2s;
      }
      .stat-card:nth-child(3) {
        animation-delay: 1.3s;
      }

      .stat-card-inner {
        position: relative;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        backdrop-filter: blur(10px);
        transition: all 0.5s ease;
      }

      .stat-card-glow {
        position: absolute;
        inset: 0;
        background: linear-gradient(
          135deg,
          rgba(255, 105, 41, 0) 0%,
          rgba(255, 105, 41, 0.05) 100%
        );
        border-radius: 1rem;
        opacity: 0;
        transition: opacity 0.5s ease;
      }

      .stat-card-inner:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 105, 41, 0.3);
        transform: translateY(-4px);
      }

      .stat-card-inner:hover .stat-card-glow {
        opacity: 1;
      }

      .stat-content {
        position: relative;
        text-align: center;
      }

      .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--brand-500), var(--brand-400));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
      }

      .stat-label {
        font-size: 0.875rem;
        color: var(--slate-400);
        font-weight: 500;
      }

      /* Footer */
      .footer {
        margin-top: 5rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        opacity: 0;
        animation: fadeIn 0.8s ease-out 1.5s forwards;
      }

      .footer-copyright {
        font-size: 0.875rem;
        color: var(--slate-500);
        text-align: center;
        margin-bottom: 1rem;
        font-weight: 300;
      }

      .footer-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .footer-link {
        font-size: 0.875rem;
        color: var(--slate-400);
        text-decoration: none;
        font-weight: 300;
        transition: color 0.3s ease;
      }

      .footer-link:hover {
        color: var(--brand-500);
      }

      /* Messages */
      .success-message,
      .error-message {
        margin-top: 1rem;
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        font-size: 0.875rem;
        backdrop-filter: blur(10px);
        animation: slideInUp 0.5s ease-out;
      }

      .success-message {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.2);
        color: #22c55e;
      }

      .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #ef4444;
      }

      /* Animations */
      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInScale {
        from {
          opacity: 0;
          transform: scale(0.9);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes shake {
        0%,
        100% {
          transform: translateX(0);
        }
        25% {
          transform: translateX(-10px);
        }
        50% {
          transform: translateX(10px);
        }
        75% {
          transform: translateX(-10px);
        }
      }

      /* Responsive */
      @media (min-width: 640px) {
        .input-group {
          flex-direction: row;
        }

        .email-input {
          min-width: 250px;
        }
      }

      @media (max-width: 768px) {
        .headline {
          font-size: 2.5rem;
        }

        .subtitle {
          font-size: 1rem;
        }

        .stat-number {
          font-size: 2rem;
        }

        .stats-grid {
          gap: 1.5rem;
        }
      }

      @media (max-width: 480px) {
        .headline {
          font-size: 2rem;
        }

        .logo {
          width: 3.75rem;
          height: 3.75rem;
        }
      }
    </style>

    <script>
      interface FormElements extends HTMLFormControlsCollection {
        email: HTMLInputElement;
      }

      interface SignupForm extends HTMLFormElement {
        readonly elements: FormElements;
      }

      // Form submission handler
      const form = document.getElementById("signupForm") as SignupForm | null;
      const emailInput = document.getElementById(
        "emailInput"
      ) as HTMLInputElement | null;

      if (form && emailInput) {
        form.addEventListener("submit", async (e: Event) => {
          e.preventDefault();

          const email = emailInput.value;
          const button = form.querySelector(".submit-btn") as HTMLButtonElement;
          const originalText = button.textContent || "Get Early Access";

          // Remove any existing messages
          const existingMessages = form.querySelectorAll(
            ".success-message, .error-message"
          );
          existingMessages.forEach((msg) => msg.remove());

          // Disable button and show loading state
          button.disabled = true;
          button.classList.add("loading");
          button.textContent = "Submitting...";

          try {
            // TODO: Replace with your actual API endpoint
            // Simulate API call
            await new Promise((resolve) => setTimeout(resolve, 1500));

            // Show success message
            const successMsg = document.createElement("div");
            successMsg.className = "success-message";
            successMsg.textContent =
              "ðŸŽ‰ Success! You'll be the first to know when we launch.";
            form.appendChild(successMsg);

            // Reset form
            emailInput.value = "";
            button.classList.remove("loading");
            button.textContent = "âœ“ Submitted";

            // Remove success message and restore button after 5 seconds
            setTimeout(() => {
              successMsg.style.animation = "fadeOut 0.4s ease-out";
              setTimeout(() => successMsg.remove(), 400);
              button.textContent = originalText;
              button.disabled = false;
            }, 5000);
          } catch (error) {
            console.error("Subscription error:", error);

            // Show error message with shake animation
            button.style.animation = "shake 0.4s ease";
            setTimeout(() => (button.style.animation = ""), 400);

            const errorMsg = document.createElement("div");
            errorMsg.className = "error-message";
            errorMsg.textContent = "Something went wrong. Please try again.";
            form.appendChild(errorMsg);

            button.classList.remove("loading");
            button.textContent = "Try Again";
            button.disabled = false;

            // Remove error message after 5 seconds
            setTimeout(() => {
              errorMsg.style.animation = "fadeOut 0.4s ease-out";
              setTimeout(() => errorMsg.remove(), 400);
              button.textContent = originalText;
            }, 5000);
          }
        });
      }

      // Parallax effect on mouse move
      let rafId: number;
      document.addEventListener("mousemove", (e: MouseEvent) => {
        if (rafId) {
          cancelAnimationFrame(rafId);
        }

        rafId = requestAnimationFrame(() => {
          const { clientX, clientY } = e;
          const centerX = window.innerWidth / 2;
          const centerY = window.innerHeight / 2;

          const moveX = (clientX - centerX) / 50;
          const moveY = (clientY - centerY) / 50;

          const orb1 = document.querySelector(".orb-1") as HTMLElement;
          const orb2 = document.querySelector(".orb-2") as HTMLElement;

          if (orb1) {
            orb1.style.transform = `translate(${moveX}px, ${moveY}px)`;
          }
          if (orb2) {
            orb2.style.transform = `translate(${-moveX}px, ${-moveY}px)`;
          }
        });
      });
    </script>
  </body>
</html>
