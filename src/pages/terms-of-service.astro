---
import Footer from "@/components/Footer";
import "../styles/global.css";
import { ArrowLeft } from "lucide-react";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Terms of Service | MVP Geek</title>
    <meta
      name="description"
      content="Terms of Service for MVP Geek — usage rules, client rights, service conditions, limitations, payments, and legal obligations."
    />
    <meta name="author" content="Rajesh Rajasekaran" />
    <meta name="robots" content="index, follow" />
